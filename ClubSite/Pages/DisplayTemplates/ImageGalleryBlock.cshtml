@model Piranha.Extend.Blocks.ImageGalleryBlock?
@using Piranha.Extend.Blocks
@{
    if (Model is null) return;
    var unique = "gallery-" + Guid.NewGuid();
}

<div id="@unique" class="carousel slide image-gallery-block" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        @for (var n = 0; n < Model.Items.Count; n++)
        {
            <li data-bs-target="#@unique" data-bs-slide-to="@n" class="@(n == 0 ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model.Items)
        {
            <div class="carousel-item @(item == Model.Items.First() ? "active" : "")">
                <img src="@Url.Content(WebApp.Media.ResizeImage(((ImageBlock) item).Body.Media, 890, 482))" class="d-block w-100">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#@unique" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#@unique" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>